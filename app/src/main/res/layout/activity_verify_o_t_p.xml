<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:background="@color/colorPrimaryDark"
    android:scrollbars="none"
    tools:context=".SendOTPActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_email"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Let's Get Started"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginStart="50dp"
            android:text="please enter the code send to your phone number"
            />
        <TextView
            android:id="@+id/timer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_regular"
            android:text="00"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/textMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="50dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginStart="50dp"
            />
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="56dp"
            android:orientation="horizontal"
            android:weightSum="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timer_tv">

            <EditText
                android:id="@+id/verfication_num_1_et"
                style="@style/RoundedEditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded_background"
                android:cursorVisible="true"
                android:ems="1"
                android:hint=""
                android:nextFocusForward="@id/verfication_num_2_et"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:includeFontPadding="true"
                android:inputType="number"
                android:maxEms="1"
                android:maxLength="1"
                android:maxLines="1"
                android:singleLine="true"
                android:gravity="center"
                android:textAlignment="center"
                android:textColorHint="@color/GrayColor"
                android:textCursorDrawable="@color/colorPrimary"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/verfication_num_2_et"
                style="@style/RoundedEditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:nextFocusForward="@id/verfication_num_3_et"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded_background"
                android:cursorVisible="true"
                android:ems="10"
                android:gravity="center"
                android:hint=" "
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:includeFontPadding="true"
                android:inputType="number"
                android:maxEms="1"
                android:maxLength="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColorHint="@color/GrayColor"
                android:textCursorDrawable="@color/colorPrimary"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/verfication_num_3_et"
                style="@style/RoundedEditText"
                android:layout_width="0dp"
                android:nextFocusForward="@id/verfication_num_4_et"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/edittext_rounded_background"
                android:cursorVisible="true"
                android:ems="1"
                android:hint=" "
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:includeFontPadding="true"
                android:inputType="number"
                android:maxEms="1"
                android:maxLength="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColorHint="@color/GrayColor"
                android:textCursorDrawable="@color/colorPrimary"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/verfication_num_4_et"
                style="@style/RoundedEditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded_background"
                android:cursorVisible="true"
                android:ems="1"
                android:hint=" "
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:includeFontPadding="true"
                android:inputType="number"
                android:maxEms="1"
                android:maxLength="1"
                android:maxLines="1"
                android:nextFocusForward="@id/verfication_num_5_et"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColorHint="@color/GrayColor"
                android:textCursorDrawable="@color/colorPrimary"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/verfication_num_5_et"
                style="@style/RoundedEditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded_background"
                android:cursorVisible="true"
                android:ems="1"
                android:gravity="center"
                android:hint=" "
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:includeFontPadding="true"
                android:inputType="number"
                android:maxEms="1"
                android:maxLength="1"
                android:maxLines="1"
                android:nextFocusForward="@id/verfication_num_6_et"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColorHint="@color/GrayColor"
                android:textCursorDrawable="@color/colorPrimary"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/verfication_num_6_et"
                style="@style/RoundedEditText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_rounded_background"
                android:cursorVisible="true"
                android:ems="1"
                android:gravity="center"
                android:hint=" "
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:includeFontPadding="true"
                android:inputType="number"
                android:maxEms="1"
                android:maxLength="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColorHint="@color/GrayColor"
                android:textCursorDrawable="@color/colorPrimary"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Didn't receive the codes?"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/sent_it_again_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:text="sent it again."
                android:textColor="@color/FuchsiaColor"
                android:textSize="14sp" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">
           <Button
                android:id="@+id/verify_button"
                style="@style/RoundedButton"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/verify"
                />
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:layout_gravity="center"/>
        </FrameLayout>
        <TextView
            android:id="@+id/tv_change_number"
            style="@style/IntroSliderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/change_number"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

    </LinearLayout>
</ScrollView>